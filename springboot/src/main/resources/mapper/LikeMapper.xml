<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.LikeMapper">

    <sql id="Base_Column_List">
        id,user_id,course_id
    </sql>

    <select id="selectAll" resultType="com.example.entity.Like">
        select manager.like.*, course.img as courseImg, course.name as courseName
        from manager.like
        left join manager.course on like.course_id = course.id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="userId != null"> and user_id = #{userId}</if>
            <if test="courseId != null"> and course_id = #{courseId}</if>
        </where>
    </select>

    <select id="selectById" resultType="com.example.entity.Like">
        select
        <include refid="Base_Column_List" />
        from manager.like
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from manager.like
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Like" useGeneratedKeys="true">
        insert into manager.like
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="courseId != null">course_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="courseId != null">#{courseId},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Like">
        update manager.like
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="courseId != null">
                course_id = #{courseId},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>